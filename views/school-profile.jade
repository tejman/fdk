extends layout


block content

  //- p #{school}, #{finance}

  #profile-container
    .jumbotron.clearfix
      .result-item.container
        .row
          .col-md-5.school-search-pic.vcenter
            img(src="/images/stock-school.png")

          .col-md-7.school-search-prof.vcenter
            ul.list-group
              li.list-group-item
                span.badge School
                | #{school.name.toLowerCase()}
              li.list-group-item
                span.badge District
                | #{school.agencyName.toLowerCase()}
              li.list-group-item
                span.badge State
                | #{school.stateFull.toLowerCase()}
              li.list-group-item
                span.badge $ Needed
                if school.balance
                  | #{school.balance.toLowerCase()}
                else
                  | $ ---
  .row
    .col-md-8.col-md-offset-2#fundraising
      .row
        .col-md-4.col-md-offset-1
          .row
            .col-md-12
               h3 We need lunch money!
          .row
            .col-md-12
              #donation.form-group
                .input-group
                  span.input-group-addon
                    span.glyphicon.glyphicon-usd
                  input.form-control(type="number", placeholder="5", min="0", step="5")
                  span.input-group-addon
                    form(action="", method="POST")
                        script(src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button", data-key="pk_test_6pRNASCoBOKtIshFeQd4XMUh", data-amount="2000", data-name="Tots for Tots", data-description="2 widgets ($20.00)", data-image="/images/stock-school.png") 

        .col-md-7
          .fundraising-stats
            table.table-hover.table-condensed
              tr
                th Deliquent Accounts:
                td 34
              tr
                th Avg Deliquent Balance:
                td $ 10.75
              tr
                th Cost per Lunch:
                td $ 1.25
        .row.search-funding
          .col-md-8.funding-status.vcenter
            .fundraising.progress
              .progress-bar(style="width: 40%")
            .progress
              .progress-bar(style="width: 40%")
          .col-md-2.vcenter.funding-label
              p.percentRaised 90
              p.percentRaisedLabel  % &nbsp; &nbsp; Raised


  .row#stat-profile


block scripts
  script.
    var bootData = !{JSON.stringify({school: school, finance: finance})}
  script(src="/javascripts/schoolClient.js")




